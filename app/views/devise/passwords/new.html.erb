<div class="container-fluid w-50 border rounded shadow mt-5 p-4 text-center">
<h2 class="h3 mb-3 fw-normal">Change your password</h2>
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <% f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" ,class:"form-control", placeholder: "email"%>
  </div>

  <div class="actions mt-3">
    <%= f.submit "Send me reset password instructions", class:"btn btn-secondary" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>